#!/usr/bin/env bash

# Parse flags
TYPE_FLAG=""
while [[ "$1" == -* ]]; do
    case "$1" in
        -f|--file) TYPE_FLAG="--type f"; shift ;;
        -d|--dir|--folder) TYPE_FLAG="--type d"; shift ;;
        *) echo "bait: unknown flag: $1" >&2; exit 1 ;;
    esac
done

query="$1"

fd $TYPE_FLAG "$query" ~ 2>/dev/null | head -1
